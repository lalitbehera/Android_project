<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="297dp"
        android:layout_height="172dp"
        app:cardCornerRadius="7dp">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="UploadPhoto"
                android:textColor="#242428"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUploadPhoto"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        <TextView
                android:text="Take Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTakePhoto"
                android:textColor="#242428"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvUploadPhoto"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        <TextView
                android:text="Choose Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvChoosePhoto"
                android:textColor="#242428"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTakePhoto"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        <TextView
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCancel"
                android:textColor="#1fb9e3"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>